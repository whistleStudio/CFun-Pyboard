{
  "name": "cfpyb",
  "displayName": "cfpyb",
  "description": "",
  "version": "0.1.1",
  "icon": "./src/img/cfpyb-icon.png",
  "publisher": "WhistleWang",
  "engines": {
    "vscode": "^1.86.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whistleStudio/CFun-Pyboard.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cfpyb.selectSp",
        "title": "串口选择",
        "icon": {
          "light": "./src/img/connect-light.png",
          "dark": "./src/img/connect-dark.png"
        }
      },
      {
        "command": "cfpyb.enterRepl",
        "title": "在线调试",
        "icon": {
          "light": "./src/img/repl-light.png",
          "dark": "./src/img/repl-dark.png"
        }
      },
      {
        "command": "cfpyb.uploadFile",
        "title": "上传文件"
      },
      {
        "command": "cfpyb.uploadProject",
        "title": "上传项目"
      },
      {
        "command": "cfpyb.openApiDoc",
        "title": "文档说明"
      },
      {
        "command": "cfpyb.installPyb",
        "title": "安装pyb库"
      },
      {
        "command": "cfpyb.reboot",
        "title": "设备重启"
      },
      {
        "command": "cfpyb.opPic",
        "title": "图片转化"
      },
      {
        "command": "cfpyb.opPicBatch",
        "title": "图片批量处理"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == python",
          "command": "cfpyb.selectSp",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == python",
          "command": "cfpyb.enterRepl",
          "group": "navigation@2"
        }
      ],
      "editor/context": [
        {
          "when": "resourceLangId == python && editorFocus",
          "command": "cfpyb.uploadFile",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == python && editorFocus",
          "command": "cfpyb.openApiDoc",
          "group": "navigation@1"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == python",
          "command": "cfpyb.uploadFile",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder && filesExplorerFocus",
          "command": "cfpyb.uploadProject",
          "group": "navigation"
        },
        {
          "when": "resourceDirname =~ /picture/ && (resourceExtname == .jpg || resourceExtname == .jpeg || resourceExtname == .png)",
          "command": "cfpyb.opPic",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder && resourcePath =~ /picture$/",
          "command": "cfpyb.opPicBatch",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cfpyb-example",
          "title": "示例代码",
          "icon": "./src/img/example.png"
        }
      ]
    },
    "views": {
      "cfpyb-example": [
        {
          "id": "e0",
          "name": "硬件基础"
        },
        {
          "id": "e1",
          "name": "传感器"
        },
        {
          "id": "e2",
          "name": "显示"
        },
        {
          "id": "e3",
          "name": "放音"
        }
      ]
    },
    "snippets": [
      {
        "language": "python",
        "path": "./src/snippets/pyoff.json"
      }
    ],
    "keybindings": [
      {
        "when": "resourceLangId == python && editorFocus",
        "command": "cfpyb.uploadFile",
        "key": "ctrl+alt+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@wokwi/bmp-ts": "^3.0.0",
    "jimp": "^0.22.12",
    "serialport": "^12.0.0"
  }
}
