{
  "name": "cfpyb",
  "displayName": "cfpyb",
  "description": "",
  "version": "0.1.0",
  "icon": "./src/img/cfpyb-icon.png",
  "publisher": "WhistleWang",
  "engines": {
    "vscode": "^1.86.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whistleStudio/CFun-Pyboard.git" 
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cfpyb.selectSp",
        "title": "串口选择"
      },
      {
        "command": "cfpyb.enterRepl",
        "title": "在线调试"
      },
      {
        "command": "cfpyb.uploadFile",
        "title": "上传文件"
      },
      {
        "command": "cfpyb.uploadProject",
        "title": "上传项目"
      },
      {
        "command": "cfpyb.openApiDoc",
        "title": "cfpy文档说明"
      },
      {
        "command": "cfpyb.installPyb",
        "title": "安装pyb库"
      },
      {
        "command": "cfpyb.reboot",
        "title": "设备重启"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == python && editorFocus",
          "command": "cfpyb.uploadFile",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == python && editorFocus",
          "command": "cfpyb.openApiDoc",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == python",
          "command": "cfpyb.uploadFile",
          "group": "navigation"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "cfpyb.uploadProject",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "python",
        "path": "./src/snippets/pyoff.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "serialport": "^12.0.0"
  }
}
